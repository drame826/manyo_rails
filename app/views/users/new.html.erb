<div class="container">
  <h1><%= t('.title') %></h1>

  <%= form_with(model: @user, url: create_user_path, local: true) do |form| %>
    <% if @user.errors.any? %>
      <div id="error_explanation">
        <h2><%= @user.errors.count %> 件のエラーメッセージ</h2>
        <ul>
          <% @user.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
    <table>        
    <div class="field">
      <%= form.label :name %><br>
      <%= form.text_field :name %>
    </div>

    <div class="field">
      <%= form.label :email %><br>
      <%= form.text_field :email %>
    </div>

    <div class="field">
      <%= form.label :password %><br>
      <%= form.password_field :password %>
    </div>

    <div class="field">
      <%= form.label :password_confirmation %><br>
      <%= form.password_field :password_confirmation %>
    </div>
    </table>

    <div class="actions">
      <%= form.submit t('helpers.submit.create', model: User.model_name.human), id: "create-user", class: "btn btn-primary mt-3" %>
    </div>
  <% end %>
</div>