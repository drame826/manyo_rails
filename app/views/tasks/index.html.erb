<% if flash[:notice] %>
  <div class="notice"><%= flash[:notice] %></div>
<% end %>

<h1><%= t("common.tasks_index") %></h1>

<table>
  <thead>
    <tr>
      <th><%= t("common.title") %></th>
      <th><%= t("common.content") %></th>
      <th><%= t("common.created_at") %></th>
    </tr>
  </thead>
  <tbody>
    <% @tasks.each do |task| %>
      <tr>
        <td><%= task.title %></td>
        <td><%= task.content %></td>
        <td><%= task.created_at.strftime('%Y/%m/%d %H:%M') %></td>
        <td><%= link_to t("common.show"), task_path(task), class: "show-task" %></td>
        <td><%= link_to t("common.edit"), edit_task_path(task), class: "edit-task" %></td>
        <td><%= link_to t("common.destroy"), task_path(task), method: :delete, class: "destroy-task", data: {confirm: t("common.confirm") } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<div class = 'index_paginate'><%= paginate @tasks %></div>