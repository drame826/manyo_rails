<% if flash[:notice] %>
  <div class="notice"><%= flash[:notice] %></div>
<% end %>

<h1><%= t("common.show_task") %></h1>

<h1><%= @task.title %></h1>
<p><%= @task.content %></p>
<p><%= @task.created_at.strftime('%Y/%m/%d %H:%M') %></p>

<%= link_to t("common.edit"), edit_task_path(@task), id: "edit-task" %> |
<%= link_to t("common.back"), tasks_path, id: "back" %>
